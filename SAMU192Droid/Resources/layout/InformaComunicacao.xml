<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/scrollView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/branco">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:background="@color/branco"
		android:id="@+id/main_content"
		android:layout_height="match_parent">
		<TextView
			android:text="@string/informa_comunicacaotitulo"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/tvTitulo"
			android:textColor="@color/laranja"
			android:backgroundTint="@color/branco"
			android:fontFamily="@font/montserratbold"
			android:textStyle="bold"
			android:textSize="22dp"
			android:textAlignment="center"
			android:layout_marginTop="35dp" />
		<ImageView
			android:src="@drawable/iconmessenger_blue"
			android:layout_gravity="center"
            android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_marginTop="50dp"
			android:layout_marginLeft="25.0dp"
			android:layout_marginRight="25.0dp"/>
		<TextView
			android:text="@string/informa_comunicacao"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/tvComunicacao"
			android:textColor="@color/preto"
			android:backgroundTint="@color/branco"
			android:fontFamily="@font/montserratregular"
			android:textStyle="normal"
			android:textSize="15dp"
			android:textAlignment="center"
			android:layout_marginTop="50dp"
			android:lineSpacingExtra="4dp"
			android:layout_marginLeft="15.0dp"
			android:layout_marginRight="15.0dp" />
		<TextView
			android:text="@string/informa_comunicacao2"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/tvComunicacao2"
			android:textColor="@color/preto"
			android:backgroundTint="@color/branco"
			android:fontFamily="@font/montserratregular"
			android:textStyle="bold"
			android:textSize="15dp"
			android:textAlignment="center"
			android:layout_marginTop="25dp"
			android:lineSpacingExtra="4dp"
			android:layout_marginLeft="15.0dp"
			android:layout_marginRight="15.0dp" />
		<Button
			android:text="@string/btnok"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/ok_cmd"
			android:textAllCaps="false"
			android:fontFamily="@font/montserratregular"
			android:textStyle="normal"
			android:textSize="18dp"
			android:layout_marginLeft="60dp"
			android:layout_marginTop="50dp"
			android:background="@color/laranja"
			android:textColor="@color/branco"
			android:layout_marginRight="60dp"
			android:layout_marginBottom="20dp"  />
	</LinearLayout>
</ScrollView>
